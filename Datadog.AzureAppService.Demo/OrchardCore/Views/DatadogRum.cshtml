@using OrchardCore.Sample
@{
}
@if (!ConfigHelper.AllDatadogVariablesSet)
{
    <!-- Datadog RUM is not enabled because it is missing necessary environment variables -->
}
else
{
    @*<script src="/js/vendor/datadog-rum.js" type="text/javascript"></script>*@
    <script src="https://www.datadoghq-browser-agent.com/datadog-rum.js" type="text/javascript"></script>
    <script>
        window.DD_RUM &&
            window.DD_RUM.init({
                applicationId: '@(ConfigHelper.DatadogRumApplicationId)',
                clientToken: '@(ConfigHelper.DatadogRumClientToken)',
                site: 'datadoghq.com',
                service: '@(ConfigHelper.DatadogService)',
                env: '@(ConfigHelper.DatadogEnv)',
                version: '@(ConfigHelper.DatadogVersion)',
                sampleRate: 100,
                trackInteractions: true
            });
    </script>

}